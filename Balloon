    <script>
        const balloon = document.getElementById('balloon');
        balloon.addEventListener('click', () => {
            balloon.style.animation = 'none';
            balloon.style.backgroundColor = 'transparent';
            balloon.style.borderRadius = '0';
            balloon.style.width = '0';
